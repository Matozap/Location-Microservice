    <PackageId>LocationService.Message</PackageId>
    <Authors>Sluk4d</Authors>
    <Company>Matozap</Company>
    <Product>LocationService.Message</Product>
    <Description>Location Service Microservice</Description>
    <Copyright>Matozap</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Matozap, Location Service, Microservice, Location, Contract, Message</PackageTags>
    <PackageReleaseNotes>Release Candidate</PackageReleaseNotes>
    <RepositoryType>Microservice Contract</RepositoryType>
    <PackageIcon>Logo.png</PackageIcon>
